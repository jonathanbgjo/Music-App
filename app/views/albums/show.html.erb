<h1>Title: <%= @album.title %></h1>

<h3>Year: <%= @album.year %></h2>

<h3>Recording type: <%= @album.live ? "Live" : "Studio" %></h3>

<h3>Band: <%= @band.name %></h4>

<h3>Tracks Included</h3>
<ul>
    <% @tracks.each do |track| %>
        <li><a href="<%= track_url(track) %>"><%= track.title %></a></li>
    <% end %>
</ul>


<br><br>
<a href="<%= new_album_track_url(@album.id) %>">Add a track</a>
<br>
<a href="<%= band_url(@band) %>">Explore this band</a>
<br>
<a href="<%= edit_album_url(@album) %>">Edit this album</a>
<br>
<form action="<%= album_url(@album) %>" method = "POSt">
    <input type="hidden" name= "_method" value = "DELETE">
    <input type="hidden" name = "authenticity_token" value = "<%= form_authenticity_token %>">
    <input type="submit" value = "Delete album :c">
</form>